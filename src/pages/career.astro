---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import Timeline from '../components/Timeline';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title={`Career - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-[#0a0a0a] text-gray-300 font-sans selection:bg-green-500/30">
        <Navigation client:load />

        <main class="pt-32 pb-20">
            <div class="max-w-3xl mx-auto px-6 mb-12 text-center">
                 <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 tracking-tight">Career Log</h1>
                 <p class="text-gray-400 max-w-xl mx-auto">
                    From automating construction sites with PHP to optimizing EVM opcodes for global contests.
                 </p>
            </div>
            
            <Timeline client:visible />
        </main>

        <Footer />
    </body>
</html>
